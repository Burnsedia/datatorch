{
  "name": "datatorch",
  "private": true,
  "workspaces": [
    "services/*",
    "clients/*",
    "tests/*",
    "shared/*"
  ],
  "version": "0.0.0",
  "scripts": {
    "dev:setup": "yarn && yarn ext:up && yarn generate",
    "dev:services": "yarn dev:setup && yarn workspace @datatorch/api dev",
    "dev:web": "yarn dev:setup && yarn workspace @datatorch/web dev",
    "dev:cli": "go run ./clients/cli",
    "generate": "yarn generate:db && yarn generate:api && yarn generate:web",
    "generate:prod": "yarn generate:db:prod && yarn generate:api && yarn generate:web",
    "generate:db": "yarn workspace @datatorch/db generate",
    "generate:db:prod": "yarn workspace @datatorch/db generate:prod",
    "generate:db:reset": "yarn workspace @datatorch/db prisma migrate reset",
    "generate:api": "yarn workspace @datatorch/api generate",
    "generate:web": "yarn workspace @datatorch/web generate",
    "build": "true",
    "lint": "yarn lint:go && yarn lint:python && yarn lint:js && yarn lint:terraform",
    "lint:go": "golangci-lint run",
    "lint:python": "python -m black .",
    "lint:terraform": "terraform fmt -recursive",
    "lint:terraform:ci": "terraform fmt -recursive -check",
    "lint:js": "eslint --ext .tsx,.ts,.jsx,.js . --fix",
    "start": "true",
    "ext:up": "docker-compose -f docker-compose.dev.yaml up -d",
    "ext:down": "docker-compose -f docker-compose.dev.yaml down",
    "test:web": "yarn workspace @datatorch/web test:unit",
    "test:cy": "yarn workspace @datatorch/e2e cypress run",
    "test:open": "yarn workspace @datatorch/e2e cypress open",
    "test:e2e": "start-server-and-test dev:web http://localhost:3000 test:cy",
    "db:reset": "yarn workspace @datatorch/db reset",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\""
  },
  "devDependencies": {
    "-": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "cypress": "^7.5.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "paths": "^0.1.1",
    "plugin": "^0.3.3",
    "prettier": "^2.3.2",
    "prisma": "^2.28.0",
    "start-server-and-test": "^1.12.5",
    "tsconfig": "^7.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.3.4",
    "wait-on": "^5.3.0",
    "webpack": "^5.64.4"
  }
}
