{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@api/*": ["./src/*"],
      "@shared/*": ["./../../shared/js/*"]
      // "@shared/db": ["./../../../shared/db/*/src"]
    }
  },
  "include": ["src/**/*"]
}
